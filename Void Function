        private void checkName(string name)
        {

            if (string.IsNullOrWhiteSpace(name))
            {
                MessageBox.Show("กำหนดให้ไม่เป็นที่ว่าง");
                return;
            }
            if (name.Length < 2)
            {
                MessageBox.Show("กำหนดให้มีอย่างน้อย 2 ตัว");

            }



        }


        private void checkPassword(TextBox password, TextBox ConfirPassword)
        {
            if (string.IsNullOrWhiteSpace(password.Text) || string.IsNullOrEmpty(ConfirPassword.Text))
            {
                MessageBox.Show("กำหนดให้ไม่เป็นที่ว่าง");
                textBox3.Focus();
                return;
            }
            if (password.Text.Length < 8)
            {
                MessageBox.Show("กำหนดให้มีอย่างน้อย 8 ตัว");
                return;
            }
            if (password.Text != ConfirPassword.Text)
            {
                MessageBox.Show("รหัสผ่านไม่ตรงกัน");
                return;
            }
        }

        private void button1_Click(object sender, EventArgs e)
        {

            fname = textBox1.Text;
            lname = textBox5.Text;
            checkName(fname);
            checkName(lname);
            checkPassword(textBox3, textBox4);
        }
    }
